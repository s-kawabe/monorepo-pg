{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUncheckedIndexedAccess": true, // restrict index signature
    "exactOptionalPropertyTypes": true, // restrict optional property
    "noImplicitReturns": true, // requires a write of all return values in the function
    "noFallthroughCasesInSwitch": true, // must write 'break' for fallthrough in switch
    "forceConsistentCasingInFileNames": true, // judge case Upper and Lower
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
